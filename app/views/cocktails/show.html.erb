<div class="container">
  <h1><%= @cocktail.name %></h1>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  <%= simple_form_for [@cocktail, @dose] do |f|%>
    <%= f.input :description %>
    <%= f.association :ingredient  %>
    <%= f.submit %>
  <% end %>

  <% @cocktail.doses.each do |dose| %>
    <div>
      <%= dose.description %>
      <%= dose.ingredient.name %>
      <%= link_to "Delete this Dose", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-dark' %>
    </div>
  <% end %>

<div>
  <%= link_to "Back to List", cocktails_path, class: 'btn btn-dark' %>
</div>

</div>

